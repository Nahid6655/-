#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "RU");

    int x;
    cout << " Веедите число " << endl;
    cin >> x;

    if (x > 0)
        cout << " число положительное \n";
    if (x == 0)
        cout << " число равно 0 \n";

    if (x < 0)
        cout << " число отрицательное \n";


    return 0;
}
